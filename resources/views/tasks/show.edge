<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tasks</title>
</head>
<body>
    <h1>Tasks</h1>

    <a href="{{ route('tasks.create') }}">Cr√©er une tache</a>

    @if(flashMessages.has('success'))
    <div class="success">
        {{ flashMessages.get('success') }}
    </div>
    @endif

    <table class="mt-6">
        <thead>
            <tr>
                <td>ID</td>
                <td>Nom</td>
                <td>Description</td>
                <td>Projet</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @each(task in tasks)
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.name }}</td>
                    <td>{{ task.description }}</td>
                    <td>{{ task.project_id }}</td>
                    <td> 
                        <form action="{{ route('tasks.delete', {id: task.id}) }}?_method=DELETE" method="post">
                            <button type="submit" class="button is-danger">
                                Delete
                            </button>
                        </form>
                        <form action="{{ route('tasks.edit', {id: task.id}) }}" method="get">
                            <button type="submit">
                                Edit
                            </button>
                        </form>
                    </td>
                </tr>
            @endeach
        </tbody>
    </table>
</body>
</html>